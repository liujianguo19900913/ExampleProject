<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/comm_color_green" />
            />
            <stroke android:width="0.5dp" android:color="@color/text_color_white_pure" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comm_color_green_press" />
            />
            <stroke android:width="0.5dp" android:color="@color/text_color_white_pure" />
        </shape>
    </item>
</selector>