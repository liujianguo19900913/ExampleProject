<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/text_color_white_pure" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />
            <!-- 边框 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/line_color_gray_jianan" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/line_color_gray_jianan" />
            <corners android:radius="5dip" />
            <!-- 边框 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/line_color_gray_jianan" />
        </shape>
    </item>
</selector>