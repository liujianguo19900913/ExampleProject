<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/comm_color_green</item>
        <item name="colorPrimaryDark">@color/comm_color_green</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--绿色按钮-->
    <style name="btn_style_green">
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:background">@drawable/btn_press_green</item>
        <item name="android:textColor">@color/text_color_white_pure</item>
        <item name="android:gravity">center</item>
    </style>

    <!--黄色按钮-->
    <style name="btn_style_yellow">
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:background">@drawable/btn_press_yellow</item>
        <item name="android:textColor">@color/text_color_white_pure</item>
        <item name="android:gravity">center</item>
    </style>
    <!--分割线-->
    <style name="Style_fengexian">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_color_gray_jianan</item>
    </style>
    <!-- 地图:图标字体颜色_白色 -->
    <style name="Map_Icon">
        <item name="android:textColor">@color/text_color_white_pure</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- 地图:图标_右侧 -->
    <style name="Map_Icon_Right">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 地图:图标_底部导航栏 -->
    <style name="Map_Icon_Nvigation_Bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_white_pure</item>
    </style>
    <!-- 地图:图标_底部叠层导航栏 -->
    <style name="Map_Icon_Nvigation_Bar_die">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 消息列表:title -->
    <style name="Message_list_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:background">@drawable/tv_borderwhite_fillgreen</item>
        <item name="android:textColor">@color/text_color_white_pure</item>
    </style>
    <!-- 字体：任务管理新建任务_textview -->
    <style name="NewMission_Textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:digits">0123456789.-</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 字体:任务管理新建任务_editview -->
    <style name="NewMission_Editview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/text_color_black_jiananan</item>
        <item name="android:textSize">@dimen/size_text_16</item>
    </style>
    <!-- 字体:任务管理新建任务_ImageView -->
    <style name="NewMission_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/icon_pull_down_selector</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!-- 布局:任务管理新建任务_相对布局 -->
    <style name="NewMission_RelativeLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/tv_bordeblack_fillwhite</item>
    </style>
    <!-- 布局:任务管理新建任务_相对布局 -->
    <style name="NewMission_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--title:任务编辑管理_itemTitle -->
    <style name="EditMission_itemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_color_white_pure</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_press_green</item>
        <item name="android:textSize">@dimen/size_text_18</item>
    </style>
    <!-- 采集:拍照_textview -->
    <style name="Collect_Takephoto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_black_norm</item>
    </style>
    <!-- 弹窗：Title -->
    <style name="Dialog_public_title">
        <item name="android:textSize">@dimen/size_text_18</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color_black_pure</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 弹窗：context -->
    <style name="Dialog_public_context">
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/text_color_black_pure</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 弹窗：dealbutton -->
    <style name="Dialog_public_dealbutton">
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:textColor">@color/comm_color_green</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
    <!-- 弹窗：Edittext -->
    <style name="Dialog_public_edittext">
        <item name="android:textSize">@dimen/size_text_18</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 收集基础信息：Linear -->
    <style name="collect_info_Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 收集基础信息：TextView和EditView -->
    <style name="collect_info_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@color/text_color_black_pure</item>
        <item name="android:gravity">center</item>
    </style>
    <!--收集基础信息：radioButton-->
    <style name="collect_info_RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/size_text_18</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
    </style>
    <!--设置界面：绿色_textview-->
    <style name="set_green_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:textColor">@color/text_color_white_pure</item>
        <item name="android:background">@color/comm_color_green</item>
        <item name="android:padding">10dp</item>
    </style>
    <!--设置界面：item上层textview-->
    <style name="set_item_textview_up">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:textColor">@color/text_color_black_norm</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_weight">3</item>
    </style>
    <!--设置界面：item下层textview-->
    <style name="set_item_textview_down">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_12</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_weight">2</item>
    </style>
    <!--主页侧滑菜单：textview-->
    <style name="home_slidingmenu_textview">
        <item name="android:background">@drawable/btn_press_green_noradius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/size_text_16</item>
        <item name="android:textColor">@color/text_color_white_pure</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- 这个Style -->
    <style name="custDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AnimationFade">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/out_righttoleft</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/loading_bg_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
